@model DigitalNoteSharing.Models.Note
@{
    ViewData["Title"] = "Upload Note";
}

<h2 class="mb-4 fw-bold">Upload Note</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data" class="p-4 bg-light rounded shadow-sm">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="Title" class="form-label fw-semibold"></label>
        <input asp-for="Title" class="form-control" placeholder="Enter note title (e.g., DSA_Unit1)" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label fw-semibold"></label>
        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Short description (e.g., Data Structures Notes)" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Choose File</label>
        <input type="file" name="file" class="form-control" accept=".pdf,.pptx,.docx,.xlsx,.csv,.png,.jpg,.jpeg" required />
        <div class="form-text">Allowed: pdf, pptx, docx, xlsx, csv, png, jpg (max 20 MB)</div>
    </div>

    <div class="d-flex gap-3 mt-4">
        <button type="submit" class="btn btn-dark px-4">Upload</button>
        <a asp-action="Mine" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
