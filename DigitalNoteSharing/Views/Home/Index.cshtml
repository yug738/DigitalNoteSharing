@{
    ViewData["Title"] = "Home";
}
<div class="py-5 text-center">
    <h1 class="display-5 fw-bold">Share Knowledge. Simplify Learning.</h1>
    <p class="lead text-muted">Upload, explore, and download class notes across degrees, majors, and years.</p>
    <div class="mt-3">
        <a href="#" class="btn btn-dark btn-lg me-2" data-bs-toggle="modal" data-bs-target="#loginModal">Login</a>
        <a href="#" class="btn btn-outline-dark btn-lg" data-bs-toggle="modal" data-bs-target="#registerModal">Sign Up</a>
    </div>
</div>

<div class="row g-3">
    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5>Upload Notes</h5>
                <p class="text-muted">PDF, PPT, DOCX, XLSX, images — neatly organized with titles and descriptions.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5>Explore Library</h5>
                <p class="text-muted">Find notes by degree, major, year, or file type — fast filters and search.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5>Convert Files</h5>
                <p class="text-muted">On-the-spot conversion between CSV and XLSX for quick format changes.</p>
            </div>
        </div>
    </div>
</div>
